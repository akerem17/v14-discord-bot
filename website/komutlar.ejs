<!DOCTYPE html>
<html lang="tr">
  <head>
    <title><%= website.name %></title>
  
    <%- include('./partials/head'); %>
  </head>
  
  <body>
    <nav>
      <%- include('./partials/nav'); %>
    </nav>
      
    <div>
      <div class="prefix">
        <h2><%= website.name %> KomutlarÄ±</h2>
      </div>

      <div class="cmds"> 
        <% commands.map(cmd => { %>
          <div class="cmd" style='<%= cmd.conf.enabled !== true ? "display: none" : "" %>'>
            <h2 class="title">
              <%= cmd.help.name %>

              <div class="ctgry">
                <%= cmd.help.category %>
              </div>
            </h2>

            <div class="line"></div>

            <div class="desc">
              <%= cmd.help.usage %>
            </div>
          </div>
        <% }); %>
      </div>

      <style>
        .prefix {
          color: #fff;
          text-align: center;
          padding: 100px;
          padding-bottom: 20px;
        }
        
        .prefix h2 {
          margin: 0 0 30px 0;
        }
        
        .cmd {
          width: 100%;
          max-width: calc(700px - 80px);
          background: #212121;
          border-radius: 10px;
          margin: 0 auto 20px;
          padding: 15px 20px;
        }
        
        .cmd .title {
          color: #fff;
          margin: 0;
          display: flex;
          align-items: center;
        }

        .cmd .ctgry {
          color: #666;
          font-size: 16px;
          margin: 0px 8px;
          user-select: none;
        }
        
        .cmd .desc {
          color: #ccc;
          margin: 5px 0px;
          margin-left: 2px;
        }
        
        .cmd .line {
          width: 100%;
          height: 2px;
          background: #333;
          margin: 10px 0;
        }

        @media (max-width: 700px) {
          .prefix {
            max-width: 100%;
            padding: 100px 0 20px;
          }
          
          .cmd {
            width: 80%;
          }
          
          .cmd .title {
            flex-direction: column-reverse;
            align-items: flex-start;
          }
        }
      </style>
    </div>

    <footer>
      <%- include('./partials/footer'); %>
    </footer>
  </body>
</html>