<div class="nav-list" id="nav-list">
  <a class="<%= location === 'anasayfa' ? 'active' : '' %>" href="/">Ana Sayfa</a>
  <a class="<%= location === 'komutlar' ? 'active' : '' %>" href="/komutlar">Komutlar</a>
  <a href="<%= website.inviteLink %>">Davet Et</a>
</div>

<script>
  var listOpened = false;
  
  function toggleNavList() {
    if (listOpened === true) {
      listOpened = false;
      document.getElementById("nav-list").style.top = "-100px";
      document.getElementById("menu-open").style.display = "block";
      document.getElementById("menu-close").style.display = "none";
    } else {
      listOpened = true
      document.getElementById("nav-list").style.top = "55px";
      document.getElementById("menu-open").style.display = "none";
      document.getElementById("menu-close").style.display = "block";
    }
  }
</script>

<style>
  .header {
    width: 100%;
    position: fixed;
    background: <%= website.colors.primary %>;
    user-select: none;
    z-index: 9;
  }
  
  .container {
    width: 80%;
    max-width: 800px;
    height: 55px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .container a, .mobile-container a, .nav-list a {
    color: #fff;
    text-decoration: none;
    padding: 8px 15px;
    margin: 0px;
    border-radius: 5px;
    transition: 0.2s;
    opacity: .6;
  }
  
  .container a.active, .container a:hover,
  .mobile-container a.active, .mobile-container a:hover,
  .nav-list a.active, .nav-list a:hover {
    opacity: 1;
  }
  
  .container .nav-title {
    color: #fff;
    font-size: 30px;
    margin-right: 15px;
    padding: 0;
    transition: .2s;
    opacity: 1;
  }
  
  .mobile-container {
    width: 80%;
    max-width: 800px;
    height: 55px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    display: none;
  }
  
  .mobile-container .nav-title {
    color: #fff;
    font-size: 30px;
    margin-left: 20px;
    padding: 0;
    transition: .2s;
    opacity: 1;
  }
  
  .mobile-container .menu-icon {
    width: 40px;
    color: #fff;
    fill: #fff;
    flex-shrink: 0;
    margin: 0 5px 0 auto;
    padding: 7.5px;
  }

  .mobile-container #menu-close {
    display: none;
  }
  
  .nav-list {
    width: 100%;
    background: <%= website.colors.second %>;
    top: -100px;
    right: 0;
    position: fixed;
    display: flex;
    flex-direction: column;
    transition: .5s;
    z-index: 8;
  }
  
  .nav-list a {
    width: calc(100% - 30px);
    text-align: right;
  }
  
  @media (max-width: 700px) {
    .header {
      top: 0;
    }
    
    .container {
      display: none;
    }
    
    .mobile-container {
      width: 100%;
      display: flex;
    }
  }
</style>